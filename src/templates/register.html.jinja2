<!-- Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><i class="fas fa-user-lock"></i> Ingrese tus datos</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body row justify-content-md-center">
	      <div class="col-md-auto">
			<form action="" method="post">
				{{ register_form.hidden_tag() }}
				<p>
				{{ register_form.username.label }}<br>
				{{ register_form.username(size=32) }}
				</p>
				<p>
				{{ register_form.password.label }}<br>
				{{ register_form.password(size=32) }}
				</p>
				<p>
				{{ register_form.password_repeat.label }}<br>
				{{ register_form.password_repeat(size=32) }}
				</p>
				<p>
				{{ register_form.email.label }}<br>
				{{ register_form.email(size=32) }}
				</p>
				<p>
				{{ register_form.submit() }}
				</p>
			</form>
	      </div>
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-primary">Iniciar Sesi√≥n</button> -->
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>